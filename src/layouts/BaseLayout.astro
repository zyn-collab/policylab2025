---
import Sidebar from '../components/Sidebar.astro';
import FootnoteExpander from '../components/FootnoteExpander.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  showSidebar?: boolean;
  fullWidth?: boolean;
}

const { title = 'My eBook', showSidebar = true, fullWidth = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="app-layout">
      {showSidebar && <Sidebar />}
      <main class:list={['main-content', { 'main-content--full': fullWidth }]}>
        <slot />
      </main>
    </div>
    <FootnoteExpander />
  </body>
</html>
